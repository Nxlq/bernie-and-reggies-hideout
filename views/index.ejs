<!DOCTYPE html>
<html>
  <head>
    <title><%= locals.title || '' %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="header__container">
      <h1><%= locals.title || '' %></h1>
      <p id="disclaimer">KEEP IT QUIET so nobody hears you</p>
      <a class="btn-create-message" href="/new">+</a>
    </div>
    <div class="message-board">
      <% messages.forEach(mes => { %>
      <div class="message__container">
        <h3 class="message-name"><%= mes.name %>:</h3>
        <p class="message"><%= mes.message %></p>
        <p>posted at - <%= mes.date %></p>
      </div>
      <% }) %>
    </div>
  </body>
</html>
